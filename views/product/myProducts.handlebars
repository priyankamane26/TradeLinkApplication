<div class="headerDiv">
    <table style="width: 100%">
        <tr>
            <td style="padding-left: 80px">
                <h3>Hello, {{user.firstName}}</h3>
            </td>
        </tr>
    </table>
</div>
{{#if products}}
<div class="outerDiv">
    <div class="innerDiv">
        <table>
            {{#each products}}
            <div class="row">
                <h2><a href="/products/{{_id}}">{{title}}</a></h2>
                <div class="col-xs-6">
                    <img src="/{{productImage}}" class="img-rounded" width="150" height="110" alt="product" />
                </div>
                <div class="col-xs-6">
                    <!--<p>Title: {{title}}</p>-->
                    <p>Description: {{description}}</p>

                    <!--<span class="label label-info">{{status}}</span>-->
                </div>
            </div>

            {{/each}}
        </table>
    </div>
</div>
{{else}}
<h4 style="padding-left: 80px">No Products to Publish.
    Add a product 
    <a href="/sell/sellProduct">here</a></h4>
{{/if}}
